{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/styles.css",
      "dest": "public/styles.css"
    },
    {
      "src": "/app.js",
      "dest": "public/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/index.html"
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "DEEPSEEK_API_KEY": "@deepseek_api_key",
    "ADMIN_API_KEY": "@admin_api_key",
    "FLASK_ENV": "production"
  }
}
